#!/usr/bin/env node

var fs        = require('fs'),
	cssConcat = require('../lib/css-concat'),
	input     = process.argv.slice(2)[0],
	output    = input.replace('.css','-out.css'),
	comments  = true,
	outString = "";

if (process.argv.slice(3).length >= 1) {
	output = process.argv.slice(3)[0];
	if (process.argv.slice(3)[1]) {
		if (process.argv.slice(3)[1] === '--no-comments') {
			comments = false;
		}
	}
}
outString = cssConcat.concat(input, {comments : comments});
fs.writeFile(output, outString, function(error) {
	if (error) throw error;
	console.log('Successfully concatenated @imports');
});
